<% title @user.full_name  %>

<p><%= link_to 'View All Artists', users_path %></p>

  
<div>
  First Name:<br>
  <%= @user.first_name %>
</div>

<div>
  Last Name:<br>
  <%= @user.last_name %>
</div>

<div>
  Email:<br>
  <%= @user.email %>
</div>


<div>
  Licensed? :<br>
  <%= @user.licensed? ? "Yes" : "No" %>
</div>

<div>
  License Date:<br>
  <%= @user.license_date %>
</div>


<div>
  What is your biggest inspiration?<br>
  <%= @user.career_inspiration %>
</div>


<div>
  How long have you been tattooing?<br>
  <%= @user.how_long_have_you_been_tattooing %>
</div>

<div>
  How do you bill work?<br>
  <%= @user.billing %>
</div>


<div>
  How did you learn tattooing?<br>
  <%= @user.how_did_you_learn_tattooing %>
</div>


<div>
  Name of Studio or Mentor<br>
  <%= @user.studio_or_mentor %>
</div>

<div>
  Studio Name: <%= @user.studio %>
</div>

<div>
  Facebook Page: <%= @user.facebook_page %>
</div>

<div>
  Twitter Page: <%= @user.twitter_page %>
</div>

<div>
  Address:  <%= "#{@user.address}, #{@user.city} #{@user.zipcode}"  %>
</div>

<div>
  Number Of Awards : <%= @user.total_awards %>
</div>

<div>
  Tattoo Speciality: <%= @user.tattoo_style %>
</div>

<div>
  Other Services : <%= @user.services.map{|t| t.service.name}.join(', ') %>
</div>

<div>
 Suggestions: <%= @user.feedback %>
</div>


<% @user.photos.each do |photo| %>
  <div>
     <%= image_tag photo.attachment.url %>
  </div>
<% end %>






